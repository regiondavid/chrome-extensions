{
    "manifest_version": 2,
    "name": "shanbei-assistant",
    "version": "0.1",
    "description": "remove the ad,slice the page and translate the words",
    "permissions": [
        "https://api.shanbay.com/bdc/search/?word=*","webRequest"
    ],
    "content_scripts": [
        {
          "matches": ["https://www.theguardian.com/*"],
          "js": ["js/main.js","js/getWords.js","js/slidePage.js"]
        }
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_title": "扇贝助手",
        "default_popup": "popup.html"
    }
}
